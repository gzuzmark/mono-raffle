{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "hardhat",
  "extends": "./base.json",
  "compilerOptions": {
    "types": ["node"],
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "hardhat.config.ts",
    "./scripts",
    "./deploy",
    "./test",
    "typechain/**/*"
  ],
  "exclude": ["node_modules"],
  "ecmaVersion": 2020,
  "sourceType": "module"
}
